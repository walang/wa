bindir = $(DESTDIR)@prefix@/bin
libdir = $(DESTDIR)@prefix@/lib

all: wa

wa: cf.lisp wc.lisp bi.wa.lisp wa.lisp
	@SBCL@ --noinform --no-sysinit --no-userinit --quit --load wa.lisp

bi.wa.lisp: wc.lisp bi.wa
	@SBCL@ --noinform --no-sysinit --no-userinit --quit --load wc.lisp --eval '(wa-compile "bi.wa")'

clean:
	rm -f wa
	rm -f bi.wa.lisp

install: wa
	mkdir -p $(bindir)
	cp wa $(bindir)/wa
	mkdir -p $(libdir)/wa

uninstall:
	rm -rf $(bindir)/wa
	rm -rf $(libdir)/wa
