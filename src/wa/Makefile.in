bindir = $(DESTDIR)@prefix@/bin
libdir = $(DESTDIR)@prefix@/lib

all: wa

wa: cf.lisp wc.lisp bi.lisp wa.lisp
	@SBCL@ --noinform --no-sysinit --no-userinit --disable-debugger --quit --load wa.lisp

bi.lisp: bi/*.wa
	echo "(wa-load-from-string \"`cat bi/*.wa | sed -e 's/\\\\/\\\\\\\\\\\\\\\\/g' | sed -e 's/\"/\\\\\"/g'`\")" > bi.lisp

clean:
	rm -f wa
	rm -f bi.lisp

install: wa
	mkdir -p $(bindir)
	cp wa $(bindir)/wa
	mkdir -p $(libdir)/wa

uninstall:
	rm -rf $(bindir)/wa
	rm -rf $(libdir)/wa
