; predicate ------------------------------------------------------------------

; XXX
(cl (defun pairwise (pred lst)
      (loop for x in lst
            for y in (cdr lst)
            always (funcall pred x y))))

; XXX
(xdef > (&rest args)
  (etypecase (car args)
    (number    (apply #'> args))
    (string    (pairwise #'string> args))
    (symbol    (pairwise #'string> args))
    (character (pairwise #'char> args))
    (t         (apply #'> args))))

; XXX
(xdef < (&rest args)
  (etypecase (car args)
    (number    (apply #'< args))
    (string    (pairwise #'string< args))
    (symbol    (pairwise #'string< args))
    (character (pairwise #'char< args))
    (t         (apply #'< args))))

; XXX
(xdef >= (&rest args)
  (etypecase (car args)
    (number    (apply #'>= args))
    (string    (pairwise #'string>= args))
    (symbol    (pairwise #'string>= args))
    (character (pairwise #'char>= args))
    (t         (apply #'>= args))))

; XXX
(xdef <= (&rest args)
  (etypecase (car args)
    (number    (apply #'<= args))
    (string    (pairwise #'string<= args))
    (symbol    (pairwise #'string<= args))
    (character (pairwise #'char<= args))
    (t         (apply #'<= args))))

